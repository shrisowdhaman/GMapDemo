<% content_for :title,"Sign In" -%>

<h2><%= content_for :title %></h2>
<% if flash[:notice] %>
  <p class="notice" id="notice">
          <%= flash[:notice] %>
  </p>
<% end -%>
<% if flash[:alert] -%>
  <p class="error" id="alert">
          <%= flash[:alert] %>
  </p>
<% end -%>
<%= form_for @user_session, :url => {:action => "create"}  do |f| %>
  <%= f.label :login %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %>
<% end %> 
<br>
<%= link_to "New User", signup_path %>
